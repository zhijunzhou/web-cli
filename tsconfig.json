{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "es2017"
    ],
    "strict": true,
    "esModuleInterop": false,
    "outDir": "build",
    "resolveJsonModule": true,
    "rootDir": "./",
    "importHelpers": true,
    "pretty": true
  },
  "include": [
    "./src/**/*.ts"
  ]
}